@inject HttpClient Http
<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-danger font-weight-bold shadow-custom">
            <div class="card-body">
                Categoría A
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-border-radius shadow-custom">
                    <div class="card-body">
                        @if (forecasts == null)
                        {
                            <p><em>Cargando...</em></p>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Código</th>
                                            <th>Actividad económica</th>
                                            <th>Destino</th>
                                            <th>Puntaje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var forecast in forecasts)
                                        {
                                            <tr class="text-capitalize">
                                                <th>@forecast.Id</th>
                                                <td>@forecast.ActividadEconomica</td>
                                                <td>@forecast.DestinoEconomico</td>
                                                <td>@forecast.Puntaje</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
