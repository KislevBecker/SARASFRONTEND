                    <li class="@_configuracionRegion">
                        <NavLink href="configuracion-region" @onclick="() => ActivarLink(4)">Región</NavLink>
                    </li>
                    <li class="@_configuracionServiciosPublicos">
                        <NavLink href="configuracion-servicios-publicos" @onclick="() => ActivarLink(4)">Servicios públicos</NavLink>
                    </li>
                    <li class="@_configuracionTipoMaterialVivienda">
                        <NavLink href="configuracion-material-vivienda" @onclick="() => ActivarLink(4)">Material vivienda</NavLink>
                    </li>
                    <li class="@_configuracionTipoPropiedad">
                        <NavLink href="configuracion-tipo-vivienda" @onclick="() => ActivarLink(4)">Tipo vivienda</NavLink>
