@code
{
    private string _inicioActive = "";
    private string _configuracionCP = ""; 
    private string _configuracionCategoriaSocial = "";
    private string _configuracionCategoriaAmbiental = "";
    private string _configuracionPuntaje = "";
    private string _configuracionRangoIngresos = "";
    private string _configuracionNivelEducativo = "";
    private string _configuracionTipoPropiedad = "";
    private string _configuracionTipoMaterialVivienda = "";
    private string _configuracionServiciosPublicos = "";
    private string _configuracionZona = "";
    private string _configuracionRegion = "";
    private string _configuracionActividadES = "";
    private string _configuracionActividadAM = "";
    private string _configuracionDestinoES = "";
    private string _configuracionDestinoAM = "";
    private string _reportes = "";
    private string _configuracionReporteS = "";
    private string _configuracionReporteA = "";
    private string _configuracionAD = "";
    private string _configuracionFUD = "";

    protected override void OnInitialized()
    {
        _inicioActive = "menuitem-active";
    }

    private void ActivarLink(int link)
    {
        DesactivarTodos();

        if (link is 1)
            _inicioActive = "menuitem-active";

        if (link is 2)
            _configuracionCP = "menuitem-active";
        _configuracionCategoriaSocial = "menuitem-active";
        _configuracionCategoriaAmbiental = "menuitem-active";
        _configuracionPuntaje = "menuitem-active";

        if (link is 3)
            _configuracionAD = "menuitem-active";
        _configuracionActividadES = "menuitem-active";
        _configuracionActividadAM = "menuitem-active";
        _configuracionDestinoES = "menuitem-active";
        _configuracionDestinoAM = "menuitem-active";

        if (link is 4)
            _configuracionFUD = "menuitem-active";
        _configuracionRangoIngresos = "menuitem-active";
        _configuracionNivelEducativo = "menuitem-active";
        _configuracionTipoPropiedad = "menuitem-active";
        _configuracionTipoMaterialVivienda = "menuitem-active";
        _configuracionServiciosPublicos = "menuitem-active";
        _configuracionZona = "menuitem-active";
        _configuracionRegion = "menuitem-active";

        if (link is 5)
            _reportes = "menuitem-active";
        _configuracionReporteS = "menuitem-active";
        _configuracionReporteA = "menuitem-active";


    }

    private void DesactivarTodos()
    {
        _inicioActive = "";
        _configuracionCategoriaSocial = "";
        _configuracionCategoriaAmbiental = "";
        _configuracionPuntaje = "";
        _configuracionAD = "";
        _configuracionActividadES = "";
        _configuracionActividadAM = "";
        _configuracionDestinoES = "";
        _configuracionDestinoAM = "";
        _configuracionFUD = "";
        _configuracionFUD = "";
        _configuracionRangoIngresos = "";
        _configuracionNivelEducativo = "";
        _configuracionTipoPropiedad = "";
        _configuracionTipoMaterialVivienda = "";
        _configuracionServiciosPublicos = "";
        _configuracionZona = "";
        _configuracionRegion = "";
        _configuracionReporteS = "";
        _configuracionReporteA = "";
        _configuracionCP = "";
    }
}
